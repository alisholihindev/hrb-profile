---
// Unit Usaha component dengan HTI dan Industri cards
---

<section id="unit-usaha" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-16 text-green-800">Unit Usaha</h2>
    <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- HTI Card -->
      <div class="bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 border border-gray-100">
        <div class="h-80 bg-gradient-to-br from-green-400 to-green-600 relative overflow-hidden">
          <!-- Placeholder untuk gambar HTI -->
          <div class="absolute inset-0 bg-black bg-opacity-20 flex items-center justify-center">
            <div class="text-center text-white">
              <div class="text-6xl mb-4">🌱</div>
              <div class="text-2xl font-bold">HTI</div>
            </div>
          </div>
        </div>
        <div class="p-8">
          <h3 class="text-2xl font-bold mb-4 text-green-800">HTI</h3>
          <p class="text-gray-700 mb-6 leading-relaxed">
            Penanaman, pemeliharaan, harvesting
          </p>
          <div class="text-green-600 font-medium flex items-center">
            Selengkapnya 
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Industri Card -->
      <div class="bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 border border-gray-100">
        <div class="h-80 bg-gradient-to-br from-amber-400 to-amber-600 relative overflow-hidden">
          <!-- Placeholder untuk gambar Industri -->
          <div class="absolute inset-0 bg-black bg-opacity-20 flex items-center justify-center">
            <div class="text-center text-white">
              <div class="text-6xl mb-4">🏭</div>
              <div class="text-2xl font-bold">Industri</div>
            </div>
          </div>
        </div>
        <div class="p-8">
          <h3 class="text-2xl font-bold mb-4 text-green-800">Industri</h3>
          <div class="space-y-3 text-gray-700 mb-6">
            <div class="flex justify-between">
              <span>Plywood:</span>
              <span class="font-semibold">10,000 m³/tahun</span>
            </div>
            <div class="flex justify-between">
              <span>Veneer:</span>
              <span class="font-semibold">6,000 m³/tahun</span>
            </div>
            <div class="flex justify-between">
              <span>Sawmill:</span>
              <span class="font-semibold">6,000 m³/tahun</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>