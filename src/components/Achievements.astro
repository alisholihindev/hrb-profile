---
// Achievements section component
---

<section id="achievements" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4 text-gray-900">What We've Achieved</h2>
        <p class="text-xl text-gray-600">
          Our impact in numbers and sustainable development
        </p>
      </div>
      
      <!-- Stats Grid -->
      <div class="grid md:grid-cols-4 gap-8">
        <!-- Stat 1 -->
        <div class="text-center">
          <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-green-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z"/>
            </svg>
          </div>
          <div class="text-4xl font-bold text-gray-900 mb-2">247K</div>
          <div class="text-gray-600 font-medium">Hectares Protected</div>
        </div>
        
        <!-- Stat 2 -->
        <div class="text-center">
          <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4Z"/>
            </svg>
          </div>
          <div class="text-4xl font-bold text-gray-900 mb-2">2M</div>
          <div class="text-gray-600 font-medium">Trees Planted</div>
        </div>
        
        <!-- Stat 3 -->
        <div class="text-center">
          <div class="w-20 h-20 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-yellow-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M16,6L18.29,8.29L13.41,13.17L9.41,9.17L2,16.59L3.41,18L9.41,12L13.41,16L19.71,9.71L22,12V6H16Z"/>
            </svg>
          </div>
          <div class="text-4xl font-bold text-gray-900 mb-2">85%</div>
          <div class="text-gray-600 font-medium">Carbon Reduction</div>
        </div>
        
        <!-- Stat 4 -->
        <div class="text-center">
          <div class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-purple-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"/>
            </svg>
          </div>
          <div class="text-4xl font-bold text-gray-900 mb-2">500+</div>
          <div class="text-gray-600 font-medium">Communities Served</div>
        </div>
      </div>
    </div>
  </div>
</section>