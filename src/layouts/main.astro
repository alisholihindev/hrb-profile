---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "HRB - Protecting Nature, Sustaining the Future" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-sans bg-white">
    <!-- Header Navigation -->
    <header id="navbar" class="bg-green-800 text-white py-4 fixed w-full top-0 z-50 shadow-lg transition-all duration-300">
      <nav class="container mx-auto px-6 flex justify-between items-center">
        <!-- Logo HRB -->
        <div class="flex items-center space-x-3">
          <img 
            src="/images/hrb-logo.png" 
            alt="HRB Logo" 
            class="h-16 w-auto"
          />
          <div class="text-xl font-bold tracking-wide">Hutan Rindang Banua</div>
        </div>
        
        <!-- Navigation Menu -->
        <ul class="hidden lg:flex space-x-8 text-sm font-medium">
          <li><a href="#home" class="nav-link hover:text-green-200 transition-colors px-3 py-2 rounded-md hover:bg-green-700">Home</a></li>
          <li><a href="#who-we-are" class="nav-link hover:text-green-200 transition-colors px-3 py-2 rounded-md hover:bg-green-700">Who We Are</a></li>
          <li><a href="#projects" class="nav-link hover:text-green-200 transition-colors px-3 py-2 rounded-md hover:bg-green-700">Our Projects</a></li>
          <li><a href="#achievements" class="nav-link hover:text-green-200 transition-colors px-3 py-2 rounded-md hover:bg-green-700">Achievements</a></li>
          <li><a href="#contact" class="nav-link hover:text-green-200 transition-colors px-3 py-2 rounded-md hover:bg-green-700">Contact</a></li>
        </ul>
        
        <!-- CTA Button -->
        <div class="hidden lg:block">
          <button class="bg-green-600 hover:bg-green-500 text-white px-6 py-2 rounded-lg font-semibold transition-colors shadow-md">
            Get Involved
          </button>
        </div>
        
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="lg:hidden text-white p-2 rounded-md hover:bg-green-700 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </nav>
      
      <!-- Mobile Menu -->
      <div id="mobile-menu" class="lg:hidden hidden bg-green-900 border-t border-green-700">
        <div class="container mx-auto px-6 py-4">
          <ul class="space-y-3">
            <li><a href="#home" class="nav-link block py-2 hover:text-green-200 transition-colors">Home</a></li>
            <li><a href="#who-we-are" class="nav-link block py-2 hover:text-green-200 transition-colors">Who We Are</a></li>
            <li><a href="#projects" class="nav-link block py-2 hover:text-green-200 transition-colors">Our Projects</a></li>
            <li><a href="#achievements" class="nav-link block py-2 hover:text-green-200 transition-colors">Achievements</a></li>
            <li><a href="#contact" class="nav-link block py-2 hover:text-green-200 transition-colors">Contact</a></li>
          </ul>
        </div>
      </div>
    </header>

    <main class="pt-20">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-green-900 text-white py-16">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-4 gap-8">
          <div class="col-span-2">
            <div class="flex items-center space-x-3 mb-6">
              <img 
                src="/images/hrb-logo.png" 
                alt="HRB Logo" 
                class="h-18 w-auto"
              />
              <div class="text-2xl font-bold">Hutan Rindang Banua</div>
            </div>
            <p class="text-green-100 mb-6 max-w-md leading-relaxed">
              Protecting Nature, Sustaining the Future. Leading forestry company dedicated to 
              sustainable forest management and environmental conservation.
            </p>
            <div class="flex space-x-4">
              <a href="#" class="w-10 h-10 bg-green-800 rounded-full flex items-center justify-center hover:bg-green-700 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
